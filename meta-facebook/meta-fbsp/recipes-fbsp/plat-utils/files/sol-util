usage() {
  echo "Usage: sol-util [ mb ]"
  echo "       sol-util [ mb ] --history"
  exit -1
}


if [ "$1" == "mb" ]
then
  SLOT=$1 
else
  usage
fi

if [ $# -gt 1 ]; then
  if [ $# -gt 2 ]; then
    usage
  fi
  if [[ "$2" == "--history" ]]; then
    LOGFILE="/var/log/mTerm_sonorapass.log"
    LOGFILE_B="/var/log/mTerm_sonorapass_backup.log"
    cat $LOGFILE_B $LOGFILE 2>/dev/null
    exit 0
  else
    usage
  fi
fi
exec /usr/local/bin/mTerm_client sonorapass
